<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="YEA Playwright Suite" parallel="false">

    <listeners>
        <listener class-name="org.testng.reporters.EmailableReporter2" />
        <listener class-name="org.testng.reporters.FailedReporter" />
    </listeners>

    <test name="Requisition Grouping Test">
        <groups>
            <run>
                <include name="requisition" />
            </run>
        </groups>
        <classes>
            <class name="com.requisition.create.NonCatalogPrCreateTest" />
            <class name="com.requisition.edit.NonCatalogPrEditTest" />
            <class name="com.requisition.sendforapproval.NonCatalogPrSendForApprovalTest" />
            <class name="com.requisition.reject.NonCatalogPrRejectTest" />
            <class name="com.requisition.approve.NonCatalogPrApproveTest" />
            <class name="com.requisition.suspend.BuyerManagerNonCatalogPrSuspendTest" />
            <class name="com.requisition.assign.RequisitionAssignTest" />
            <class name="com.requisition.suspend.BuyerNonCatalogPrSuspendTest" />
        </classes>
    </test>
</suite>